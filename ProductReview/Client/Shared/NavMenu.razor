<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">ProductReview</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="authentication/profile" Match="NavLinkMatch.All">
                        <span class="oi oi-person" aria-hidden="true"></span> @context.User.Identity.Name!
                    </NavLink>
                </li>
                    @*<li class="nav-item px-3">
                        <NavLink class="nav-link" href="authentication/logout" Match="NavLinkMatch.All">
                            <span class="oi oi-account-logout" aria-hidden="true"></span> Log out
                        </NavLink>
                    </li>*@
            </Authorized>
            <NotAuthorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="authentication/register" Match="NavLinkMatch.All" @onclick="() => expandSubMenu=false">
                        <span class="oi oi-person" aria-hidden="true"></span> Register
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="authentication/login" Match="NavLinkMatch.All" @onclick="() => expandSubMenu=false">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Log in
                    </NavLink>
                </li>
            </NotAuthorized>
        </AuthorizeView>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="() => expandSubMenu=false">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/Genre" @onclick="()=>expandSubMenu=true">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Genre
            </NavLink>
            @if (expandSubMenu)
            {
                <NavLink class="navbar-expand-md" href="/Action" >
                    <span class="oi oi-intermediate-state-2" aria-hidden="true"></span> Action
                </NavLink>
                <NavLink class="navbar-expand-md" href="/Adventure" >
                    <span class="oi oi-intermediate-state-2" aria-hidden="true"></span> Adventure
                </NavLink>
            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata" @onclick="() => expandSubMenu=false">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubMenu;//add


    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
